extends layouts/main

block content
	.form-container
		form(action=`${routes.videos}${routes.editVideo}`, method="post")
			input(type="text", name="title", placeholder="비디오 제목을 입력해주세요.")
			textarea(name="description", placeholder="비디오 설명을 입력해주세요.")
			input(type="submit", value="비디오 수정")
		a.form-container__link(href=`${routes.videos}${routes.deleteVideo}`) 비디오 삭제