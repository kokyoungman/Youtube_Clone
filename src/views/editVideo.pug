extends layouts/main

block content
	.form-container
		form(action=routes.editVideo(video.id), method="post")
			input(type="text", name="title", placeholder="비디오 제목을 입력해주세요.", value=video.title)
			textarea(name="description", placeholder="비디오 설명을 입력해주세요.")=video.description
			input(type="submit", value="비디오 수정")
		a.form-container__link(href=routes.deleteVideo(video.id))
			button.delete 비디오 삭제