extends layouts/main

block content
	.form-container
		form(action=`${routes.users}${routes.changePassword}`, method="post")
			input(type="password", name="oldPassword", placeholder="기존 비밀번호를 입력해주세요.")
			input(type="password", name="newPassword1", placeholder="새로운 비밀번호를 입력해주세요.")
			input(type="password", name="newPassword2", placeholder="새로운 비밀번호를 한번 더 입력해주세요.")
			input(type="submit", value="비밀번호 변경")